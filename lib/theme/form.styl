.field
  font-size 0
  margin-bottom $line-height

field-vert-padding = 4px
field-border = 1px
field-height = $line-height + field-vert-padding * 2 + field-border * 2

input,
textarea,
select
  font-size $font-size
  font-family $font-family
  line-height $line-height
  height $line-height
  color $color
  padding field-vert-padding
  margin-right 10px
  border field-border solid #ccc
  border-radius 3px
  box-shadow inset 0 1px 1px rgba(0,0,0,.075)
  transition border linear .2s, box-shadow linear .2s
  &:focus
    outline 0
    outline thin dotted \9; /* IE6-9 */
    border-color rgba(82,168,236,.8)
    box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6)

select
  height field-height
  line-height field-height

textarea
  height auto

form label
  display inline-block
  vertical-align middle
  font-size $font-size
  width 140px
  text-align right
  margin-right 15px

form .controls
  padding 20px
  padding-left 145px
  button
    margin-left 10px

  width auto
  background-color whiteSmoke
  border-top 1px solid #e5e5e5

form
  width 700px


placeholder()
  color #ccc
  font-style italic

input, textarea
  &:-moz-placeholder
    placeholder()
  &::-webkit-input-placeholder
    placeholder()
  &:-ms-input-placeholder
    placeholder()

input, textarea
  width 15em
  &.small
    width 2em
  &.long
    width 30em
